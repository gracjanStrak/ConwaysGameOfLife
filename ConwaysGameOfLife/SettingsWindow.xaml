<Window x:Class="ConwaysGameOfLife.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConwaysGameOfLife"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="500" Width="400"
        Topmost="True">
    
    <StackPanel Orientation="Vertical" Background="#FF282828" >
        
        <Button Content="Start/Stop" Margin="0,10"
                Height="50" Width="350" FontSize="16"
                FontWeight="Black" Background="#66827B7B"
                Click="OnClick_StartStop">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" 
                    Value="12" />
                </Style>
            </Button.Resources>
        </Button>
        
        <Button Content="Clear" Margin="0,10"
                Height="50" Width="350" 
                FontSize="16" FontWeight="Black"
                Background="#66827B7B"  
                Click="OnClick_Clear">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" 
                    Value="12" />
                </Style>
            </Button.Resources>
        </Button>
        
        <Button Content="Reset" Margin="0,10"
                Height="50" Width="350"
                FontSize="16" FontWeight="Black"
                Background="#66827B7B" 
                Click="OnClick_Reset">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" 
                    Value="12" />
                </Style>
            </Button.Resources>
        </Button>
        
    </StackPanel>

    
</Window>
