<Window x:Class="ConwaysGameOfLife.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:ConwaysGameOfLife"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d"
      Title="Game of Life" Height="800" Width="1600"
      KeyDown="Window_KeyDown"
      Focusable="True">

   <Window.DataContext>
      <local:MainViewModel />
  </Window.DataContext>

    <Grid Background="#FF282828">
        <Image x:Name="GameImage"
             Source="{Binding Bitmap}"
             Width="500"
             Height="500"
             HorizontalAlignment="Center"
             VerticalAlignment="Center"
             MouseDown="Image_MouseDown"
               MouseUp="Image_MouseUp"
             RenderOptions.BitmapScalingMode="NearestNeighbor"
             RenderTransformOrigin="0,0"
             MouseWheel="GameImage_MouseWheel"
             MouseMove="GameImage_MouseMove">
           <Image.RenderTransform>
              <TransformGroup>
                  <ScaleTransform x:Name="GameScaleTransform" ScaleX="1" ScaleY="1" />
                  <TranslateTransform x:Name="GameTranslateTransform" />
              </TransformGroup>
           </Image.RenderTransform>
      </Image>

        <TextBlock Text="{Binding GenerationText}"
               Foreground="White"
               FontSize="16"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="10"
               Background="#66000000"
               Padding="5"
               FontWeight="Bold"/>
        <TextBlock Text="{Binding FpsText}"
        Foreground="White"
        FontSize="16"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Margin="0,10,27,0"
        Background="#66000000"
        Padding="5"
        FontWeight="Bold"/>
        <TextBlock Text="{Binding PopulationText}"
        Foreground="White"
        FontSize="16"
        HorizontalAlignment="Left"
        VerticalAlignment="Bottom"
        Margin="10"
        Background="#66000000"
        Padding="5"
        FontWeight="Bold"/>
        
    </Grid>
</Window>